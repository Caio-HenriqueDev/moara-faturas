{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/main.py"
    },
    {
      "source": "/docs",
      "destination": "backend/main.py"
    },
    {
      "source": "/health",
      "destination": "backend/main.py"
    },
    {
      "source": "/faturas/(.*)",
      "destination": "backend/main.py"
    },
    {
      "source": "/processar_email/(.*)",
      "destination": "backend/main.py"
    },
    {
      "source": "/create-checkout-session/(.*)",
      "destination": "backend/main.py"
    },
    {
      "source": "/stripe-webhook/(.*)",
      "destination": "backend/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "VERCEL_ENV": "production"
  },
  "regions": ["gru1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    }
  ]
} 